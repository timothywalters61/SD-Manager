{
	"name": "functions",
	"description": "Cloud Functions for Firebase",
	"main": "index.js",
	"scripts": {
		"serve": "firebase serve --only functions",
		"shell": "firebase functions:shell",
		"start": "npm run shell",
		"deploy": "firebase deploy --only functions",
		"logs": "firebase functions:log",
		"cover": "istanbul cover _mocha ./firebase/index.test.js -x ./firebase/index.test.js || true",
		"test": "mocha ./firebase/index.test.js  --detectOpenHandles --timeout 60000",
		"coveralls": "npm run cover -- --report lcovonly && cat ../coverage/lcov.info | coveralls || true"
	},
	"engines": {
		"node": "8"
	},
	"dependencies": {
		"firebase-admin": "^8.6.0",
		"firebase-functions": "^3.3.0",
		"lodash": "^4.17.19",
		"puppeteer": "^5.2.1",
		"sinon": "^9.0.2"
	},
	"devDependencies": {
		"chai": "^4.2.0",
		"chai-as-promised": "^7.1.1",
		"coveralls": "^3.1.0",
		"firebase-functions-test": "^0.1.7",
		"istanbul": "^0.4.5",
		"mocha": "^7.2.0",
		"mocha-lcov-reporter": "^1.3.0",
		"nyc": "^15.0.1"
	},
	"private": true
}
